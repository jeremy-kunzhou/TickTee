<% content_for :content do %>
<div class="row welcome">
  <div id="welcome_1">
  	<p>Welcome</p>
  		</div>
  		<div id="welcome_2">
  			<p>To the <span>fancy</span> way for</p>
  		</div>
  		<div id="welcome_3">
  			<p>Tracking your progress</p>
  		</div>
  	</div>

			<div id="information">
				<div  class="row">
			<div class="info info-top">
				<div class="col-sm-6 col-md-6">
					<div class="info_graph info_graph_left_top">
			  			<p class="text-center" >input your progress simply</p>
			  		</div>
				</div>
				<div class="col-sm-6 col-md-6">
					<div class="info_graph info_graph_right_top">
			  			<p class="text-center" >generate progress bar stylish</p>
			  		</div>
				</div>					
			</div>
				</div>
				<div class="row">
			<div class="info info-down">
				<div class="col-sm-6 col-md-6">
					<div class="info_graph info_graph_left_bottom">
		  				<p class="text-center" >paste the url freely</p>
		  			</div>
				</div>
				<div class="col-sm-6 col-md-6">
					<div class="info_graph info_graph_right_bottom">
		  				<p class="text-center" >track your progress clearly</p>
		  			</div>
				</div>
			</div>
				</div>		  		
		</div>
	</div>
		<script>
		$(document).ready(function(){
			var $window = $(window)
			var welcomeFontSize = 50;
			var infoFontSize = 20;
			var windowSize = $window.width();
			
			var changeFontSize = function (){
				if (windowSize < 768)
				{
					welcomeFontSize = 20+ (welcomeFontSize-20) * windowSize / 768
					infoFontSize = 13+ (infoFontSize-13) * windowSize / 768					
				}
				else
				{
					welcomeFontSize = 50;
					infoFontSize = 20;
				}
			}
			
			var welcomeAnimate = function(){
				changeFontSize()
				
				$('.info_graph').css(
					{
						'font-size': ''+infoFontSize+'px',
					}
				)
				
			$('#welcome_1').animate(
				{
					left: '20%',
					'font-size': ''+welcomeFontSize+'px',
					opacity: '1',
				}, 
				function(){
					$('#welcome_2 span').animate({
						color: 'red'
					})
					$('#welcome_2').animate(
						{
							left: '22%',
							top: '100px',
							'font-size': ''+welcomeFontSize*0.8+'px',
							opacity: '1',
						},
						function(){
							$('#welcome_3').animate(
								{
									left: '25%',
									top:'150',
									'font-size': ''+welcomeFontSize+'px',
									opacity: '1',
								}
							)
					
							$('#information').animate(
								{
									opacity: '1',
								}
							)
						}
					)
			
			
				}
			)
		}
		
		var updateUI = function() {
				windowSize = $window.width();
				changeFontSize()
				$('.info_graph').css(
					{
						'font-size': ''+infoFontSize+'px',
					}
				)
				$('#welcome_1').css({
					'font-size': ''+welcomeFontSize+'px'
				})
				$('#welcome_2').css({
					'font-size': ''+welcomeFontSize*0.8+'px'
				})
				$('#welcome_3').css({
					'font-size': ''+welcomeFontSize+'px'
				})
				
		}
		
		welcomeAnimate();
		
		$(window).resize(updateUI)
		
		})
		</script>
<% end %>
