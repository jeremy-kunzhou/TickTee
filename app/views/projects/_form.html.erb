<%= form_for [current_user, @project] do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, {class: "form-control"} %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, {class: "form-control"} %>
  </div>
  <div class="form-group">
    <%= f.label :start_at %>
    <%= f.date_select :start_at, {class: "form-control"} %>
  </div>
  <div class="form-group">
    <%= f.label :end_at %>
    <%= f.date_select :end_at, {class: "form-control"} %>
  </div>
  <div class="form-group">
    <%= f.label :expected_progress %>
    <%= f.number_field :expected_progress, {class: "form-control"} %>
  </div>
  <div class="form-group">
    <%= f.label :current_progress %>
    <%= f.number_field :current_progress, {class: "form-control"} %>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
