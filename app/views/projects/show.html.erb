<% title(@project.name, "Projects")%>
<p>
  <strong>Name:</strong>
  <%= @project.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @project.description %>
</p>

<p>
  <strong>Start at:</strong>
  <%= @project.start_at %>
</p>

<p>
  <strong>End at:</strong>
  <%= @project.end_at %>
</p>

<p>
  <strong>Expected progress:</strong>
  <%= @project.expected_progress %>
</p>

<p>
  <strong>Current progress:</strong>
  <%= @project.current_progress %>
</p>

<p>
  <strong>Progress Image:</strong>
  <%= image_tag(@image_path, alt: "Progress Image") %>
</p>

<p>
	<strong>Image Access Url:</strong>
	<%= link_to user_url(current_user)+generate_path(@project)+".jpg", user_url(current_user)+generate_path(@project)+".jpg"%>
</p>

<%= link_to 'Edit', [:edit, current_user, @project] %> |
<%= link_to 'Destory',  [current_user, @project], method: :delete, data: {confirm: "Do you really want to destory this project?"} %> |
<%= link_to 'Back', user_projects_path(current_user) %> | 
<%= link_to 'Generate', user_url(current_user)+generate_path(@project)+".jpg", method: :get %>
